---
import BaseLayout from './BaseLayout.astro';
import AuthorBio from '../components/AuthorBio.astro';
import { site } from '../data/site';

interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  updatedDate?: Date;
  image?: {
    feature?: string;
    credit?: string;
    creditlink?: string;
  };
}

const { title, description, pubDate, updatedDate, image } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<BaseLayout title={title} description={description} image={image}>
  <div class="flex flex-col md:flex-row gap-8">
    <aside class="md:w-64 flex-shrink-0">
      <div class="md:sticky md:top-8">
        <AuthorBio />
      </div>
    </aside>
    <article class="flex-1 min-w-0">
      <header class="mb-8">
        <h1 class="text-3xl font-heading font-bold mb-4 text-primary">
          {title}
        </h1>
        <p class="text-sm text-gray-500">
          Published on <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
          {updatedDate && (
            <span> &bull; Updated on <time datetime={updatedDate.toISOString()}>{formatDate(updatedDate)}</time></span>
          )}
        </p>
      </header>

      <div class="prose prose-lg max-w-none">
        <slot />
      </div>

      <hr class="my-8" />

      <footer class="text-sm text-gray-600">
        <p>
          <strong>{title}</strong> was published on
          <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
          by <a href="/" class="underline hover:text-primary">{site.owner.name}</a>.
        </p>
      </footer>
    </article>
  </div>
</BaseLayout>
